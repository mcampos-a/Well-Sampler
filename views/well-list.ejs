<%- include('partials/header') -%>
<body>
    <h1>Well List Page</h1>

    <form action="/well-list/new" method="POST">
        <label for="wellName">Enter Well Name:</label>
        <input type="text" name="wellName" id="wellName" placeholder="e.g. WR-201A">
        <br>
        <label for="dateConstructed">Enter Well Construction Date:</label>
        <input type="date" name="dateConstructed" id="dateConstructed" placeholder="1992">
        <br>
        <label for="swl">Enter Staic Water Level:</label>
        <input type="number" name="swl" id="swl" value = 0.00 min="0" placeholder="210" step="0.01">
        <br>
        <label for="correction">Enter Correction:</label>
        <input type="number" name="correction" id="correction" value = 0.00 step="0.01">
        <button type="submit" class="btn btn-secondary">Add Well</button>
    </form>
    <br>

    <ul>
        <% wellList.forEach(well => { %>
            <li>
                <div><%= well.wellName %></div>
                <div><%= well.cSWL %></div>
                <a href="/edit/<%= well._id %>">Edit</a>
                <a href="/edit/remove/<%= well._id %>">Remove</a>
            </li>
        <% }) %>
        
    </ul>

    <ul>
        <a href="/profile" class="col-1 btn btn-primary">Back to Profile</a>
    </ul>
</body>
<%- include('partials/footer') -%>