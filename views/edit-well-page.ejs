<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Well</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <section>
        <h1>Well Edit Page</h1>
        <section>
            <h3>Well List</h3>
            <ul>
                <% wellList.forEach(well => { %>
                    <% if (well._id == idWell) { %>
                        <li>
                            <form action="/edit/update/<%= well._id%>" method="POST">
                                <label for="wellName">Enter Well Name:</label>
                                <input type="text" name="wellName" placeholder="e.g. WR-201A" value = "<%= well.wellName %>">
                                <br>
                                <label for="dateConstructed">Enter Well Construction Date:</label>
                                <input type="date" name="dateConstructed" placeholder="1992" value = "<%= well.dateConstructed %>">
                                <br>
                                <label for="swl">Enter Staic Water Level:</label>
                                <input type="number" name="swl" min="0" placeholder="210" step="0.01" value = "<%= well.swl %>">
                                <br>
                                <label for="correction">Enter Correction:</label>
                                <input type="number" name="correction" step="0.01"  value = "<%= well.correction %>">
                                <button type="submit">Confirm</button>
                                <a href="/">Cancel</a> 
                            </form> 
                        </li>
                        <br>
                    <% } else { %>
                    
                        <li>
                            <div><%= well.wellName %></div>
                            <div><%= well.cSWL %></div>
                            <a href="/edit/<%= well._id %>">Edit</a>
                            <a href="/edit/remove/<%= well._id %>">Remove</a>
                        </li>
                        <% } %>
                <% }) %>
            </ul>
        </section>
    </section>

</body>
</html>