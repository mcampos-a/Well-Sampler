<body>
    <h1>Well Sampler Home Page</h1>

    <form action="/new" method="POST">
        <label for="wellName">Enter Well Name:</label>
        <input type="text" name="wellName" placeholder="e.g. WR-201A">

        <label for="dateConstructed">Enter Well Construction Date:</label>
        <input type="date" name="dateConstructed" placeholder="1992">

        <label for="swl">Enter Staic Water Level:</label>
        <input type="number" name="swl" value = 0.00 min="0" placeholder="210" step="0.01">

        <label for="correction">Enter Correction:</label>
        <input type="number" name="correction" value = 0.00 step="0.01">
        <button type="submit">Submit</button>
    </form>

